{
    "description": "Create an NGINX Plus Image",
    "variables": {
      "machine_type": "f1-micro",
      "region": "australia-southeast1",
      "zone": "australia-southeast1-a",
      "purpose": "nginxplus-r22-v1",
      "image_family": "ubuntu-1804-lts",
      "project_id": ""
    },
    "builders": [
      {
        "name": "ngx-plus",
        "type": "googlecompute",
        "project_id": "{{user `project_id`}}",
        "machine_type": "{{user `machine_type`}}",
        "source_image_family": "{{user `image_family`}}",
        "region": "{{user `region`}}",
        "zone": "{{user `zone`}}",
        "image_description": "NGINX Plus R22 on Ubuntu 18.04 LTS",
        "image_name": "{{user `purpose`}}",
        "disk_size": 16,
        "disk_type": "pd-ssd",
        "ssh_username": "nginxplus",
        "tags": ["ngx-plus-r22"]
      }
    ],
    
    "provisioners": [
      {
        "type": "file",
        "source": "base-nginx-plus/",
        "destination": "/tmp",
        "only": [
          "ngx-plus"
        ]
      },
      {
        "type": "shell",
        "inline": [
            "sudo sh /tmp/install_nginx.sh"
        ],
        "only": [
            "ngx-plus"
        ]
      }
    ]
  }
